{
  "name": "@bankofai/8004-sdk",
  "version": "1.1.0",
  "description": "TypeScript SDK for 8004. Supports agent registration, reputation, and validation flows.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "resource",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "clean": "rm -rf dist",
    "check": "tsc -p tsconfig.json --noEmit",
    "dev": "tsx watch src/index.ts",
    "lint": "npm run check",
    "test": "npm run check",
    "ci": "npm run clean && npm run check && npm run build",
    "pack": "npm run ci && npm pack",
    "release": "npm run ci && npm publish",
    "prepack": "npm run ci",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "keywords": [
    "8004",
    "erc-8004",
    "trc-8004",
    "agent"
  ],
  "author": "bankofai <support@bankofai.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bankofai/8004-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/bankofai/8004-sdk/issues"
  },
  "homepage": "https://github.com/bankofai/8004-sdk#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "graphql-request": "^7.2.0",
    "tronweb": "^6.0.4",
    "viem": "^2.37.5"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
